<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <include
        layout="@layout/navigation_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/PwdLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_marginTop="0.5dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="订购密码:"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/gray_write_5"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:hint="粉丝必须输入此密码才能订购"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="订购续费"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:id="@+id/ItemsLayout">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/PayBtnA"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/black_5"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:text="支付"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="其他收费项目"/>
            <RelativeLayout
                android:id="@+id/get_publisher_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取发布者联系方式"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_publisher_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="#ff0000"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/PayBtnBLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:visibility="gone">
                <TextView
                    android:id="@+id/PayBtnB"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/black_5"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:text="支付"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>